{
  "name": "userscripts",
  "version": "1.0.0",
  "description": "My homemade Tampermonkey userscripts",
  "license": "GPL-3.0",
  "author": "Kevin GRILLET",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevingrillet/Userscripts.git"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint user.js",
    "lint:js:fix": "eslint user.js --fix",
    "lint:md": "markdownlint *.md **/*.md",
    "lint:md:fix": "markdownlint *.md **/*.md --fix",
    "lint:fix": "npm run lint:js:fix && npm run lint:md:fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
